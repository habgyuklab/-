                </tbody>
        </table>

        <div class="footer">
            HAPGYEOK LAB MANAGED STUDY ROOM
        </div>
    </div>

    <script>
        const periods = [
            { name: "1교시", time: "08:00~09:10" },
            { name: "2교시", time: "09:20~10:40" },
            { name: "3교시", time: "10:50~12:00" },
            // 점심시간 삽입 지점
            { name: "4교시", time: "13:10~14:40" },
            { name: "5교시", time: "14:50~16:20" },
            { name: "6교시", time: "16:30~18:00" },
            // 저녁시간 삽입 지점
            { name: "7교시", time: "19:10~20:40" },
            { name: "8교시", time: "20:50~22:20" },
            { name: "9교시", time: "22:30~24:00" }
        ];

        const days = ['sun', 'mon', 'tue', 'wed', 'thu', 'fri', 'sat'];
        
        // 상태: 0=빈칸, 1=학습(○), 2=입실안함
        let scheduleData = {};

        function initTable() {
            const tbody = document.getElementById('timetableBody');
            tbody.innerHTML = '';

            // 데이터 초기화 (없는 경우)
            periods.forEach((p, pIdx) => {
                days.forEach(d => {
                    const key = `${pIdx}-${d}`;
                    if (scheduleData[key] === undefined) {
                        scheduleData[key] = 0;
                    }
                });
            });

            // 테이블 렌더링
            periods.forEach((p, index) => {
                // 1. 점심시간 행 추가 (3교시와 4교시 사이 = index 3 직전)
                if (index === 3) {
                    addBreakRow(tbody, "점심시간", "12:00~13:10");
                }
                // 2. 저녁시간 행 추가 (6교시와 7교시 사이 = index 6 직전)
                if (index === 6) {
                    addBreakRow(tbody, "저녁시간", "18:00~19:10");
                }

                // 일반 교시 행 추가
                const tr = document.createElement('tr');
                
                // 시간 컬럼
                const timeTd = document.createElement('td');
                timeTd.className = 'time-col';
                timeTd.innerHTML = `${p.name}<span class="time-sub">${p.time}</span>`;
                tr.appendChild(timeTd);

                // 요일별 셀
                days.forEach(day => {
                    const td = document.createElement('td');
                    td.className = 'cell-selectable';
                    const key = `${index}-${day}`;
                    
                    // 상태 적용
                    applyStatusClass(td, scheduleData[key]);

                    // 클릭 이벤트
                    td.onclick = () => toggleStatus(key, td);
                    tr.appendChild(td);
                });

                tbody.appendChild(tr);
            });
        }

        // 중간 휴식시간(점심/저녁) 행 추가 함수
        function addBreakRow(tbody, label, time) {
            const tr = document.createElement('tr');
            tr.className = 'break-time'; // 검은색 배경 스타일 적용
            
            // 라벨 컬럼
            const labelTd = document.createElement('td');
            labelTd.className = 'time-col';
            labelTd.style.backgroundColor = 'black'; // 명시적 지정
            labelTd.style.color = 'white';
            labelTd.innerHTML = `${label}<span class="time-sub" style="color:#ccc">${time}</span>`;
            tr.appendChild(labelTd);

            // 나머지 칸 (통합하지 않고 칸 구분 유지하되 모두 검은색)
            for (let i = 0; i < 7; i++) {
                const td = document.createElement('td');
                // 내용은 비워두거나 텍스트를 넣을 수 있음
                tr.appendChild(td);
            }
            tbody.appendChild(tr);
        }

        function toggleStatus(key, element) {
            let status = scheduleData[key];
            status = (status + 1) % 3; // 0 -> 1 -> 2 -> 0 순환
            scheduleData[key] = status;
            applyStatusClass(element, status);
        }

        function applyStatusClass(element, status) {
            element.className = 'cell-selectable'; // reset
            if (status === 1) {
                element.classList.add('status-study');
            } else if (status === 2) {
                element.classList.add('status-no-entry');
            }
        }

        function updateInfo() {
            document.getElementById('displayName').textContent = document.getElementById('inputName').value || '이름 입력';
            document.getElementById('displayPeriod').textContent = document.getElementById('inputPeriod').value || '예: ~12/31';
            document.getElementById('displaySeat').textContent = document.getElementById('inputSeat').value || 'S-7';
            document.getElementById('displayLocker').textContent = document.getElementById('inputLocker').value || '번호 입력';
        }

        function resetTable() {
            if(confirm('모든 시간표 내용을 초기화하시겠습니까?')) {
                for (let key in scheduleData) {
                    scheduleData[key] = 0;
                }
                initTable();
            }
        }

        // [추가 기능] 전체 입실안함 설정
        function setAllNoEntry() {
            if(confirm('모든 시간을 "입실안함"으로 설정하시겠습니까?')) {
                for (let key in scheduleData) {
                    scheduleData[key] = 2; // 2 = 입실안함 상태
                }
                initTable();
            }
        }

        function downloadImage() {
            const element = document.getElementById('preview-area');
            
            html2canvas(element, {
                scale: 2, // 고화질
                backgroundColor: "#ffffff"
            }).then(canvas => {
                const link = document.createElement('a');
                link.download = '합격랩_개인시간표.png';
                link.href = canvas.toDataURL();
                link.click();
            });
        }

        // 초기화 실행
        initTable();
    </script>
</body>
</html>
